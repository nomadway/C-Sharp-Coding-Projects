@using QuoteInsuranceMVC.ViewModels
@model List<QuotaVm>

    <div class="row no-gutters m-3">
        <div class="card col-sm-12 col-md-10 col-lg-6 mx-auto shadow">
            <div class="card-header text-center">
                <h5 class="m-0">Quotes</h5>
            </div>
            <div class="card-body">
                @foreach (var customer in Model)
                {
                    <input type="hidden" name="Id" value="@customer.Id" />
                    <div class="row" mb-3>
                        <div class="col">
                            @customer.Quote
                        </div>
                        <div class="col">
                            @customer.FirstName
                        </div>
                        <div class="col">
                            @customer.LastName
                        </div>
                        <div class="col">
                            @customer.EmailAddress
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>